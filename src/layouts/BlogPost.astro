---
import { CollectionEntry } from 'astro:content';
const { content, frontmatter } = Astro.props as {
  content: any;
  frontmatter: CollectionEntry<'posts'>['data'];
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{frontmatter.title}</title>
    <meta name="description" content={frontmatter.description || ''} />
    <link rel="stylesheet" href="/css/custom.css" />
  </head>
  <body style="font-family:system-ui;line-height:1.6;margin:0;">
    <header style="padding:1.5rem;border-bottom:1px solid #eee;">
      <nav style="display:flex;gap:1rem;">
        <a href="/" style="font-weight:700;text-decoration:none;">Home</a>
        <a href="/posts" style="text-decoration:none;">Posts</a>
      </nav>
    </header>
    <main style="max-width:860px;margin:2rem auto;padding:0 1rem;">
      <article>
        <h1 style="margin-bottom:0.5rem;">{frontmatter.title}</h1>
        {frontmatter.featured_image && (
          <p style="text-align:center;">
            <img
              src={typeof frontmatter.featured_image === 'string' ? frontmatter.featured_image : frontmatter.featured_image.src}
              alt={frontmatter.title}
              style="max-width:100%;height:auto;"
            />
          </p>
        )}
        <slot />
      </article>
    </main>
  </body>
</html>
