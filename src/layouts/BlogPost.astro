---
import type { CollectionEntry } from 'astro:content';
const { frontmatter } = Astro.props as {
  frontmatter: CollectionEntry<'posts'>['data'];
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{frontmatter.title}</title>
    <meta name="description" content={frontmatter.description || ''} />
    <link rel="stylesheet" href="/css/custom.css" />
    <style>
      /* Nice defaults for post content */
      main{max-width:860px;margin:2rem auto;padding:0 1rem;font-family:system-ui;line-height:1.6}
      article img{max-width:100%;height:auto}
      /* Center any paragraph-only images */
      article p > img{display:block;margin-inline:auto}
      article h1,h2,h3{line-height:1.25}
      header{padding:1.5rem;border-bottom:1px solid #eee}
      nav a{margin-right:1rem;text-decoration:none}
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" style="font-weight:700;">Home</a>
        <a href="/posts">Posts</a>
      </nav>
    </header>
    <main>
      <article>
        <h1 style="margin-bottom:.5rem;">{frontmatter.title}</h1>
        {frontmatter.featured_image && (
          <p style="text-align:center;">
            <img
              src={typeof frontmatter.featured_image === 'string'
                     ? frontmatter.featured_image
                     : frontmatter.featured_image.src}
              alt={frontmatter.title}
            />
          </p>
        )}
        <slot />
      </article>
    </main>
  </body>
</html>
